pipeline {
    agent any

    environment {
        AWS_CREDENTIALS_ID = 'aws-creds'
        CLUSTER_NAME = 'app-clus'
        REGION = 'us-west-2'
    }

    stages {
        stage('Create EKS Cluster') {
            steps {
                withAWS(credentials: "${AWS_CREDENTIALS_ID}", region: "${REGION}") {
                    script {
                        sh '''
                            eksctl create cluster \
                                --name ${CLUSTER_NAME} \
                                --version 1.30 \
                                --region ${REGION} \
                                --nodegroup-name stand-work \
                                --node-type t3.medium \
                                --nodes 1 \
                                --nodes-min 1 \
                                --nodes-max 1 \
                                --managed
                        '''
                    }
                }
            }
        }
    }

    post {
        success {
            echo "EKS Cluster creation successful!"
            // Trigger the deployment pipeline (Jenkinsfile-2)
            build job: 'Build-for-EKS-Cluster', wait: true, parameters: [
                string(name: 'CLUSTER_NAME', value: CLUSTER_NAME),
                string(name: 'REGION', value: REGION)
            ]
        }
        failure {
            echo 'EKS cluster creation failed.'
        }
    }
}
